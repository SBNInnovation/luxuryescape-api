{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",  // ⚡ Faster for Node.js (instead of ESNEXT)
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,   // ⚡ Speeds up builds
    "forceConsistentCasingInFileNames": true, // Prevents case-sensitive issues
    "sourceMap": false,    // Reduces memory use
    "noEmitOnError": false // Prevents build failures due to minor errors
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

