{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true, 
    "noEmitOnError": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
